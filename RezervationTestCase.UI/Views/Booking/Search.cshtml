@{
    Layout = "_Layout";
}
@model List<BookingCreateDto>

<form asp-action="Search" asp-controller="Booking" method="get">
    <div class="form-group">
        <div class="row justify-content-center">
            <div class="col-6 justify-content-center">
                <div class="row">
                    <div class="col-6">
                        <label for="entryDate">Entry Date:</label>
                        <input name="entryDate" type="date" class="form-control" id="entryDate" placeholder="Choose entry date">
                    </div>
                    <div class="col-6">
                        <label for="exitDate">Exit Date:</label>
                        <input name="exitDate" type="date" class="form-control" id="exitDate" placeholder="Choose exit date">
                    </div>
                    <div class="form-group">
                        <label for="countOfVisitor">Konaklayacak kişi sayısı:</label>
                        <input name="visitor" type="number" class="form-control" id="visitor" min="1" max="3">
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary my-2">Odaları Listele</button>
                </div>

            </div>
        </div>
    </div>

</form>

@{
    if (Model != null)
    {

        foreach (var item in Model)
        {
            <div class="card">
                <div class="card-header">
                    @item.NumberOfVisitor kişilik
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.TotalPrice</h5>
                    <p class="card-text"><span><b>Giriş Tarihi :</b></span> @item.EntryDate <span><b>Çıkış Tarihi :</b></span> @item.ExitDate</p>
                    <a href="#" class="btn btn-primary">Rezerve et</a>
                </div>
            </div>

        }
    }
}